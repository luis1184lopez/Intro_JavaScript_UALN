<script>
		function sumar(){
		var suma = document.getElementById('suma').value;
		document.getElementById('operador').value= suma;
		}
		function restar(){
		var resta = document.getElementById('resta').value;
		document.getElementById('operador').value= resta;
		}
		function dividir(){
		var dividir = document.getElementById('divide').value;
		document.getElementById('operador').value= dividir;
		}
		function multiplicar(){
		var multiplicar = document.getElementById('multiplica').value;
		document.getElementById('operador').value= multiplicar;
		}
		function limpiar(){
		document.getElementById('operando1').value= "";
		document.getElementById('operador').value= "";
		document.getElementById('operando2').value= "";
		document.getElementById('calculofinal').innerHTML="";
		}
		function capturar(){
			
		operando1= parseInt(document.getElementById('operando1').value);
		
		operador= document.getElementById('operador').value;
		
		operando2= parseInt(document.getElementById('operando2').value);
	
		if (operador == "+"){
			operacionsuma = operando1 + operando2;
			document.getElementById('calculofinal').innerHTML= operacionsuma;
		}
		if (operador == "-"){
			operacionresta = operando1 - operando2;
			document.getElementById('calculofinal').innerHTML= operacionresta;
		}
		if (operador == "x"){
			operacionmult = operando1 * operando2;
			document.getElementById('calculofinal').innerHTML= operacionmult;
		}
		if (operador == "/"){
			operaciondiv = operando1 / operando2;
			document.getElementById('calculofinal').innerHTML= operaciondiv;
		}	
	}

</script>
</body>
